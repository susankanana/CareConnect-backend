{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "skipLibCheck": true 
  },
  "include": [
    "src/**/*",
    "src/types"
    ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
}